---
// Sign in page - redirects to Stack Auth's hosted signin
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In - Chief of Staff Quest</title>
    <style>
        body {
            font-family: system-ui, -apple-system, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            background: #f5f5f5;
        }
        .container {
            text-align: center;
            padding: 2rem;
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            max-width: 400px;
        }
        button {
            background: #0070f3;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 6px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 1rem;
        }
        button:hover {
            background: #0051cc;
        }
    </style>
    <script type="module">
        import { StackClientApp } from "@stackframe/stack";

        const stack = new StackClientApp({
            projectId: "5ef873fa-5690-460a-bc2c-b29802508691",
            publishableClientKey: "pck_ga54pv0h057get6j0ej1sxeacgd0kszgs800xnydnd0v0"
        });

        window.signIn = async () => {
            await stack.redirectToSignIn();
        };

        // Check if already signed in
        const user = stack.getUser();
        if (user) {
            window.location.href = '/profile';
        }
    </script>
</head>
<body>
    <div class="container">
        <h1>Sign In</h1>
        <p>Sign in to Chief of Staff Quest</p>
        <button onclick="signIn()">Sign In with Stack Auth</button>
    </div>
</body>
</html>
